        var Qty = 1;
        var ImageName = ProductImage;
        //var Price = Number((Number(salePrice) - Number(discountPrice)));
        //var Amount = Number(Price) * Number(Qty);

        var TotalAmount = 0;
        console.log('ProductId' + ProductId);
        $.ajax({
            url: "../../WebHome/RemoveQtyToCart",
            type: "POST",
            data: {
                ProductId: ProductId,
                ProductName: ProductNameVar,
                Qty: Qty,
                ImageName: ImageName,
                Price: Price,
                Amount: Amount,
                Discount: discountPrice,
                TotalAmount: TotalAmount
            },
            success: function (result) {
                //console.log(result);
                //window.location.href = "/ViewCart/ViewCart";
                $("#cartlisting").load(location.href + ' #cartlisting');
            },
            error: function (error) {
                console.log(error);
            }
        });
    }
</script>
