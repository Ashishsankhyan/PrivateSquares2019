    var AddToCartViewCart = function (Id, ProductName, ProductImage, Price, Amount) {
       // console.log(Id + ProductName + SellingPrice + DiscountPrice + ProductImage);
      
        //var salePrice = SellingPrice;
        var discountPrice = 0;
        var ProductId = Id;
        var ProductNamevar = "" + ProductName + "";
        var Qty = 1;
        var ImageName = ProductImage;
        //var Price = Number((Number(salePrice) - Number(discountPrice)));
        //var Amount = Number(Price) * Number(Qty);

        var TotalAmount = 0;
        console.log('ProductId' + ProductId);
        $.ajax({
            url: "../../WebHome/AddToCart",
            type: "POST",
            data: {
                ProductId: ProductId,
                ProductName: ProductNamevar,
                Qty: Qty,
                ImageName: ImageName,
                Price: Price,
                Amount: Amount,
                Discount: discountPrice,
                TotalAmount: TotalAmount
            },
            success: function (result) {
                //console.log(result);
                //window.location.href = "/ViewCart/ViewCart";
                $("#cartlisting").load(location.href + ' #cartlisting');
            },
            error: function (error) {
                console.log(error);
            }
        });
    }
    var RemoveToCartViewCart = function (Id, ProductName, ProductImage, Price, Amount,index) {
        //console.log(Id + ProductName + SellingPrice + DiscountPrice + ProductImage);
