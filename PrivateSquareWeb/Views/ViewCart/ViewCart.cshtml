    <div class="ps-hero">
        <div class="container">
            <h3>YOUR CART</h3>
            <p>Page Cart</p>
        </div>
    </div>
    <div class="ps-content pt-80 pb-80">
        <div class="ps-container">
            <div class="ps-cart-listing" id="cartlisting">
                <table class="table ps-cart__table">
                    <thead>
                        <tr>
                            <th>All Products</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <div id="CartList">

                            @{ int index = 0;
                                foreach (var item in ViewBag.AddToCart)
                                {

                                    <tr>
                                        <td>
                                            <a class="ps-product--compare" href="~/WebHome/ProductDetail/@item.ProductId">
                                                <img class="mr-15" src="~/DocImg/@item.ImageName" alt="">  @item.ProductName
                                            </a>
                                        </td>
                                        <td>₹ @item.Price</td>
                                        <td>
                                            <div class="form-group--number">
                                                <button class="minus" onclick="RemoveToCartViewCart('@item.ProductId','@item.ProductName','@item.ImageName','@item.Price','@item.Amount','@index')"><span>-</span></button>
                                                <input class="form-control" id="@("TxtQty"+index)" name="@("TxtQty"+index)" type="text" value="@item.Qty">
                                                <button class="plus" onclick="AddToCartViewCart('@item.ProductId','@item.ProductName','@item.ImageName','@item.Price','@item.Amount')"><span>+</span></button>
                                            </div>
                                        </td>
                                        <td>₹ @item.Amount</td>
                                        <td>
                                            <div><input class="ps-remove" value="X" type="button" onclick="DeleteItemView(@index)" /></div>
                                        </td>
                                    </tr>



                                    index++;
                                }
                            }
                        </div>

                    </tbody>
                </table>
                <div class="ps-cart__actions">

                    <div class="ps-cart__promotion">
                        @*--------div for Promo Code --- Commented code below------------*@
                        @*<div class="form-group">
                            <div class="ps-form--icon">
                                <i class="fa fa-angle-right"></i>
