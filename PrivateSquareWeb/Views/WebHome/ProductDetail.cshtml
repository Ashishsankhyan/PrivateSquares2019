<script type="text/javascript">
    var GetTotal = function ()
    {
        console.log("GetTotal");
        var salePrice =@Model.SellingPrice;
        var discountPrice=@Model.DiscountPrice;
        //console.log(salePrice);
        var Qty = document.getElementById('TxtQty').value;
        var LblTotal = document.getElementById('TotalAmount');
        if (Qty.trim() == '' || Qty.trim() == null) {
            alert('Minum 1 Qty Required');
            return;
        }
        else
        {
            LblTotal.innerText = Number((Number(salePrice) - Number(discountPrice)) * Qty);
        }
    }
    var AddToCart = function ()
    {
        var Qty = document.getElementById('TxtQty').value;
        console.log('Qty===' + Qty);
        if (Qty.trim() == '' || Qty.trim() == null) {
            alert('Minum 1 Qty Required');
            return;
        }
        var salePrice =@Model.SellingPrice;
        var discountPrice=@Model.DiscountPrice;
        var ProductId =@Model.Id;
        var ProductName ="@Model.ProductName";

        var ImageName = "@Model.ProductImage";
        var Price = Number((Number(salePrice) - Number(discountPrice)));
        var Amount = Number(Price)*Number(Qty);

        var TotalAmount = 0;
        console.log('ProductId' + ProductId);
        $.ajax({
            url: "../../WebHome/AddToCart",
            type: "POST",
            //contentType: false,
            //processData: false,
            data: {
                ProductId: ProductId,
                ProductName: ProductName,
                Qty: Qty,
                ImageName: ImageName,
                Price: Price,
                Amount: Amount,
                Discount: discountPrice,
                TotalAmount: TotalAmount
            },
            success: function (result) {
                console.log(result);
                window.location.href = "/ViewCart/ViewCart";
            },
            error: function (error) {
                console.log(error);
            }
        });
    }
</script>



